		<collision>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<geometry>
				<sphere radius="0.0155"/>
			</geometry>
		</collision>
	</link>

	<gazebo reference="right_front_caster">
		<material>Gazebo/Grey</material>
		<mu1>0.2</mu1>
		<mu2>0.2</mu2>			
	</gazebo>

	<joint name="right_front_caster_joint" type="fixed">
