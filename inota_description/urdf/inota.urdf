<?xml version="1.0" encoding="UTF-8"?>
<robot name="inota">
<!--BASE -->
  <!-- Base Footprint -->
    <link name="base_footprint"/> 
    
	<joint name="base_footprint_joint" type="fixed">     	
		<parent link="base_footprint"/>
     	<child link="base_link"/>	
    </joint> 
    
	<link name="base_link">	
		<inertial>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<mass value="10.0"/>
			<inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0"/>
		</inertial>
		
		<visual>
			<origin xyz="0 0.272 0" rpy="1.57 0 0" />  
			<geometry>
				<mesh filename="package://inota_description/meshes/inota.stl" scale="0.001 0.001 0.001"/> 
			</geometry>
		</visual>

		<collision>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.705 0.544 0.233"/> 
			</geometry>
		</collision>
	</link>

	<gazebo reference="base_link">
		<material>Gazebo/DarkGrey</material> 
	</gazebo>
	  

<!-- RIGHT WHEEL -->
	<link name="right_wheel_link">
	    	<inertial>
	      	  <mass value="1.0"/>
	      	  <origin xyz="0.0 0.0 0.0"/>
		  <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0" />
	    	</inertial>

		<visual>
			<origin rpy="0 0 1.57" xyz="-0.0003 0 -0.198"/> 
			<geometry>
				 <mesh filename="package://inota_description/meshes/wheel.stl" scale="0.001 0.001 0.001"/> 
			</geometry>
		</visual>

		<collision>
			<origin rpy="1.57075 0 0" xyz="0 0 0"/>
			<geometry>
				<cylinder length="0.049" radius="0.098"/>
			</geometry>
		</collision>
	</link>

	<gazebo reference="right_wheel_link">
		<material>Gazebo/Grey</material>
		<mu1>1.0</mu1>
		<mu2>1.0</mu2>
		<kp>1000000.0</kp>
		<kd>100.0</kd>
		<minDepth>0.001</minDepth>
		<maxVel>1.0</maxVel>		
	</gazebo>
	
	<joint name="right_wheel_joint" type="continuous">
		<axis xyz="0 -1 0"/>
		<parent link="base_link"/>
		<child link="right_wheel_link"/>
		<origin rpy="0 0 0" xyz="0 0.22 -0.052"/>
		<dynamics damping="0.5"/>
	</joint>


<!-- LEFT WHEEL -->
	<link name="left_wheel_link">
	    	<inertial>
	      	  <mass value="1.0"/>
	      	  <origin xyz="0.0 0.0 0.0"/>
